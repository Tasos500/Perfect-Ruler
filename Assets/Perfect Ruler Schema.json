{
	"$schema":"https://json-schema.org/draft/2020-12/schema",
	"type":"object",
	"properties":{
		"mod_creator":{
			"type":"string"
		},
		"mod_name":{
			"type":"string"
		},
		"description":{
			"type":"string"
		},
		"version":{
			"type":"string"
		},
		"cards":{
			"type":"array",
			"minItems":1,
			"items":{
				"type":"object",
				"properties":{
					"number":{
						"type":"string",
						"pattern":"^([0-9]{3})$"
					},
					"name":{
						"type":"string"
					},
					"dc":{
						"type":"integer",
						"minimum":0,
						"maximum":99
					},
					"attribute":{
						"enum":[
							"LIGHT",
							"DARK",
							"FIRE",
							"EARTH",
							"WATER",
							"WIND"
						]
					},
					"card_type":{
						"enum":[
							"DRAGON",
							"SPELLCASTER",
							"ZOMBIE",
							"WARRIOR",
							"BEAST_WARRIOR",
							"BEAST",
							"WINGED_BEAST",
							"FIEND",
							"FAIRY",
							"INSECT",
							"DINOSAUR",
							"REPTILE",
							"FISH",
							"SEA_SERPENT",
							"MACHINE",
							"THUNDER",
							"AQUA",
							"PYRO",
							"ROCK",
							"PLANT",
							"IMMORTAL",
							"MAGIC",
							"POWER_UP",
							"TRAP_LIMITED",
							"TRAP_FULL",
							"RITUAL"
						]
					},
					"level":{
						"type":"integer",
						"minimum":1,
						"maximum":12
					},
					"atk":{
						"type":"integer",
						"minimum":0,
						"maximum":9999
					},
					"def":{
						"type":"integer",
						"minimum":0,
						"maximum":9999
					},
					"effect":{
						"type":"object",
						"properties":{
							"effect_properties":{
								"type":"object",
								"properties":{
									"effect_type":{
										"enum":[
											"spellbind",
											"destroy_opponent",
											"heal_controller_to"
										]
									},
									"attribute1":{
										"type":[
											"string",
											"integer"
										]
									}
								},
								"required":[
									"effect_type"
								]
							}
						}
					},
					"fusions":{
						"type":"array",
						"minItems":1,
						"items":{
							"type":"object",
							"properties":{
								"product":{
									"type":"string",
									"pattern":"^([0-9]{3})$"
								},
								"material":{
									"type":"integer",
									"minimum":1,
									"maximum":2
								}
							}
						}
					},
					"externals":{
						"type":"array",
						"minItems":1,
						"items":{
							"type":"integer",
							"minimum":0
						}
					}
				},
				"required":[
					"number",
					"name",
					"dc",
					"card_type"
				],
				"if":{
					"anyOf":[
						{
							"properties":{
								"card_type":{
									"const":"MAGIC"
								}
							}
						},
						{
							"properties":{
								"card_type":{
									"const":"TRAP_FULL"
								}
							}
						},
						{
							"properties":{
								"card_type":{
									"const":"TRAP_LIMITED"
								}
							}
						},
						{
							"properties":{
								"card_type":{
									"const":"RITUAL"
								}
							}
						}
					]
				},
				"then":{
					"required":[
						"effect"
					]
				},
				"else":{
					"required":[
						"attribute",
						"level",
						"atk",
						"def"
					]
				}
			}
		},
		"fusions":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"product":{
						"type":"object",
						"properties":{
							"number":{
								"type":"string",
								"pattern":"^([0-9]{3})$"
							},
							"set":{
								"type":"string",
								"pattern":"^[a-zA-Z0-9]+\\.[a-zA-Z0-9]+$"
							}
						},
						"required":[
							"number"
						]
					},
					"material1":{
						"type":"array",
						"items":{
							"type":"object",
							"properties":{
								"number":{
									"type":"string",
									"pattern":"^([0-9]{3})$"
								},
								"set":{
									"type":"string",
									"pattern":"^[a-zA-Z0-9]+\\.[a-zA-Z0-9]+$"
								}
							},
							"required":[
								"number"
							]
						}
					},
					"material2":{
						"type":"array",
						"items":{
							"type":"object",
							"properties":{
								"number":{
									"type":"string",
									"pattern":"^([0-9]{3})$"
								},
								"set":{
									"type":"string",
									"pattern":"^[a-zA-Z0-9]+\\.[a-zA-Z0-9]+$"
								}
							},
							"required":[
								"number"
							]
						}
					}
				},
				"required":[
					"product",
					"material1",
					"material2"
				]
			}
		}
	},
	"required":[
		"mod_creator",
		"mod_name",
		"cards"
	]
}